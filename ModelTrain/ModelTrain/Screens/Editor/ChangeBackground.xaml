<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="ModelTrain.Screens.ChangeBackground"
    xmlns:icon="clr-namespace:ModelTrain.Model"
    Title="Change Background">

    <!-- Buttons For Camera or Gallery -->
    <StackLayout
        Grid.Row="1"
        Orientation="Horizontal"
        HorizontalOptions="Center"
        VerticalOptions="Center"
        Margin="0,0,0,2"
        Spacing="200">
        <Button
            Text="Camera"
            WidthRequest="200"
            HeightRequest="100"
            FontSize="20"
            ImageSource="camera.png"
            Clicked="OnCameraButtonClicked"/>
        <!-- Handle the click event -->
        <Button
            Text="Gallery"
            WidthRequest="200"
            HeightRequest="100"
            FontSize="20"
            ImageSource="gallery.png"
            Clicked="OnGalleryButtonClicked"/>
        <!-- Handle the click event -->
    </StackLayout>
</ContentPage>