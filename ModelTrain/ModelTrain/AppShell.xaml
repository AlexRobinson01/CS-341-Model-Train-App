<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ModelTrain.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ModelTrain"
    xmlns:screens="clr-namespace:ModelTrain.Screens"
    Shell.FlyoutBehavior="Disabled"
    Title="ModelTrain">
    <TabBar>
        <!-- Home Tab -->
        <Tab Title="Home"
             Icon="home.png">
            <ShellContent ContentTemplate="{DataTemplate screens:PersonalProjects}"/>
        </Tab>

        <!-- Tracks Tab -->
        <Tab Title="New Track"
             Icon="add.png">
            <ShellContent ContentTemplate="{DataTemplate screens:NewTrack}"/>
        </Tab>

        <!-- Account Tab -->
        <Tab Title="Account"
             Icon="account.png">
            <ShellContent ContentTemplate="{DataTemplate screens:Account}"/>
        </Tab>
    </TabBar>

    <!-- To switch screen change screens:YOURSCREENHERE-->
    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate screens:Account}"
        Route="screen"/>

</Shell>
